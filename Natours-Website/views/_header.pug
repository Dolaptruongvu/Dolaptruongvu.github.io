header.header
    nav.nav.nav--tours
        a.nav__el.nav__el--All(href='/') All tours
        a.nav__el.nav__el--topFive(href='/top-5-tours') Top Tours
    .header__logo
        img(src='/img/logo-forest.png' alt='Natours logo')
    nav.nav.nav--user
        if(user)
            a.nav__el.nav__el--logout Logout
            a.nav__el.nav__el--container(href='/me')
                img.nav__user-img(src=`/img/userphoto/${user.photo}` alt=`${user.name} photo`)
                span= user.name.split(' ')[0]
        else
            a.nav__el.nav__el--login(href='/login') Login
            a.nav__el.nav__el--cta(href='/signup') Signup