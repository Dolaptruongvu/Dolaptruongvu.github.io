extend base 

block content 
    main.main.main--resetPassword
        .resetPassword-form
            h2.heading-secondary.ma-bt-lg Reset Your New Password
            form.form.form--resetPassword
                .form__group.form__group--password
                    label.form__label(for='password') Password
                    input#userResetPassword.form__input(type='password',placeholder='********',required,minlength='8',name='password')
                .form__group.form__group-newPassword
                    label.form__label(for='confirmPassword') Confirm Password
                    input#userRConfirmResetPassword.form__input(type='password',placeholder='********',required,minlength='8',name='passwordConfirm')
                .form__group
                    button.btn.btn--resetPassword Reset Password
block footer 
    footer.footer.footer--resetPassword
        .footer__logo
            img( src='/img/logo-green.png' alt='Natour logo' )
        .footer-wrap
            ul.footer-wrap__nav
                li: a(href='#') About us
                li: a(href='#') Download apps
                li: a(href='#') Become a guide
                li: a(href='#') Careers 
                li: a(href='#') Contact
